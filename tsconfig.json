{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node", "playwright"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@fixtures/*": ["src/fixtures/*"],
      "@config/*": ["src/config/*"],
      "@data/*": ["src/data/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"]
    }
  },
  "include": ["src", "tests", "playwright.config.ts"]
}